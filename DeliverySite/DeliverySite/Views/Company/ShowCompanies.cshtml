@model DeliverySite.ModelView.CompanyViewModel
@using DeliverySite.Models
@{

    ViewBag.Title = "Show Companies";
    if (Session["ManagerLoggedIn"] != null)
    {
        Layout = "~/Views/Shared/_LayoutManagers.cshtml";
    }
    else if (Session["UserLoggedIn"] != null)
    {
        Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
}

<h2>Show Companies</h2>
<style>

    body {
        background: #E6E6FA;
    }

    .search {
        float: left;
        margin: 20px;
    }

    table#t01 th {
        background-color: black;
        color: white;
    }

    .headLine {
        color: deepskyblue;
        font-size: 130%;
        font-weight: bold;
    }

    table#t01 tr:nth-child(even) {
        background-color: #eee;
    }

    table#t01 tr:nth-child(odd) {
        background-color: #fff;
    }

    table {
        width: 100%;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<!DOCTYPE html>
<html>
<head>

</head>
<body id="test1">
    <table id="table" class="table">
        <tr>
            <th>
                Company
            </th>
            <th>
                Code
            </th>
            
        </tr>
        @foreach (var item in Model.companies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompCode)
                </td>
                <td>
                    @Html.ActionLink("Contact", "../User/ContactCompany", new { id = item.CompCode })
                </td>
            </tr>
        }
    </table>

    <script>
        var myVal = '@Session["BigFont"]';
        if (myVal != null) {
            document.getElementById("test1").style.fontSize = "150%";
            document.getElementById("test1").style.fontWeight = "900";
            document.getElementById("table").style.fontSize = "200%";
            document.getElementById("table").style.fontWeight = "900";
        }
    </script>
</body>
</html>


