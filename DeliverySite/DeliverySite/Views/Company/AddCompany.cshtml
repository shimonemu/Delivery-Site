@model DeliverySite.ModelView.CompanyViewModel
@using DeliverySite.Models;

@{
    ViewBag.Title = "AddNewCompany";
    Layout = "~/Views/Shared/_LayoutManagers.cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<style>
    body {
        background: #E6E6FA;
    }

    #text {
        color: white;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    .centered-form {
        margin-top: 60px;
    }

        .centered-form .panel {
            background: rgba(255, 255, 255, 0.8);
            box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
        }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
</head>
<body lang="en">
    <div>
        <div class="container" id="formm">
            <div class="row centered-form">
                <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Add new Company </h3>
                        </div>
                        <div class="panel-body">
                            <form @*role="form"*@ action="../Company/AddCompanyToDB" method="post">
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <input type="text" name="CompName" id="CompName" class="form-control input-sm" placeholder="Company Name" value="@Model.company.CompName">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="CompCode" id="CompCode" class="form-control input-sm" placeholder="Company Code" value="@Model.company.CompCode">
                                </div>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <input type="password" name="Password" id="Password" class="form-control input-sm" placeholder="Password" value="@Model.company.Password">
                                        </div>
                                    </div>
                                </div>

                                <input type="submit" value="Register" class="btn btn-info btn-block">
                                @Html.ValidationSummary()
                                @TempData["AddNewCompanySuccess"]
                                @TempData["AddNewCompanyFailure"]
                                @TempData["existComp"]
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

        <h4 style="color:blue">Current Companies:</h4>
        <br />
        <table id="t01">
            <tr class="headLine">
                <td>Company Code</td>
                <td>Company Name</td>

            </tr>
            @foreach (Company obj in Model.companies)
            {
                <tr>
                    <td>@obj.CompCode</td>
                    <td>@obj.CompName</td>

                </tr>
            }
        </table>

    </div>
</body>
</html>