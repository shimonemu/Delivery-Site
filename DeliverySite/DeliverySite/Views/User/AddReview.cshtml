<!DOCTYPE html>
<html lang="en">

<head >

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>
<body id="test1">

    <form method="post" action="../User/AddReviewToDb">

        @Html.DropDownListFor(m => m.order.OrderNum, new SelectList(Model.orders, "OrderNum", "OrderNum"), "Please choose your Order for Review", new { name = "Name", id = "OrderNum", @class = "btn btn-default dropdown-toggle" })

        <br />
        <br />

        <div>
            <label id="test" class="loginFormElement">User ID:</label>
            <input class="form-control" id="ID" name="ID" readonly="readonly" placeholder=@Model.user.Id value=@Model.user.Id>
        </div>
        @*<div>
                <label class="loginFormElement">Its good or bad Review:</label>
                <input class="form-control" id="ID" name="ID" readonly="readonly" placeholder=@Model.user.Id value=@Model.user.Id>
            </div>*@
        <div class="form-group">
            <label class="loginformelement">Review:</label>
            <textarea class="form-control" rows="5" id="Review" name="Review" placeholder="Write you Review"></textarea>
        </div>
        <br />
        <br />
        <input type="submit" name="login" class="login login-submit" value="Send Request">
    </form>
    
    <script>
        var myVal = '@Session["BigFont"]';
        if (myVal != null) {
            document.getElementById("test1").style.fontSize = "150%";
            document.getElementById("test1").style.fontWeight = "900";
        }
    </script>

    @*@Html.ValidationSummary()*@



</body>

</html>