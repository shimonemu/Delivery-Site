@model DeliverySite.ModelView.OrderViewModel

@{
    ViewBag.Title = "Show Orders";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    
}

<h2>My Last Orders:</h2>

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.order.OrderNum)
        </th>*@
        <th>
            Product Name
        </th>
        <th>
            Product ID
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            ID
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model.orders)
    {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.OrderNum)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.ActionLink("Re-Order", "ReOrder", new { id = item.OrderNum })
        </td>
    </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to Menu", "UserWindow")
</div>
