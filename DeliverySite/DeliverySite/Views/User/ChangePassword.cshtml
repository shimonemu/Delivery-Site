
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";

}

<h2>Change Password</h2>

<!DOCTYPE html>
<html>
<head>
</head>

<body id="test1">

    @using (Html.BeginForm("ConfirmChangePassword", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>User</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Please enter your new Password</label><br />
                <div class="col-md-10">
                    <input class="form-control" id="password" name="password" type="password" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Confirm your new Password</label><br />

                <div class="col-md-10">
                    <input id="confirmPassword" name="confirmPassword" class="form-control" type="password" /><br />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-warning">@TempData["changePassword"]</label>
                    <label class="label-warning">@TempData["NotGoodPass"]</label>
                </div>
            </div>
        </div>
    }


    <button style="float:right" type="button" onclick="changeFont()">Change Font!</button>
    <script>
        function changeFont() {
            document.getElementById("test1").style.fontSize = "150%";
            document.getElementById("test1").style.fontWeight = "900";
            document.getElementById("table").style.fontSize = "200%";
            document.getElementById("table").style.fontWeight = "900";
        }
    </script>
</body>
</html>